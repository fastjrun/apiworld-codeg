<?xml version="1.0" encoding="UTF-8"?>
<bundle xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="fastjrun-schema.xsd">
    <packets>
        <packet class="packet.customapi.RegistserRestRequestBody">
            <field name="loginId" dataType="String" length="12" canBeNull="false"
                   remark="登录名"/>
            <field name="loginpwd" dataType="String" length="64" canBeNull="false"
                   remark="密码"/>
            <field name="sex" dataType="String" length="1" canBeNull="true"
                   remark="性别"/>
            <field name="nickName" dataType="String" length="30" canBeNull="true"
                   remark="昵称"/>
            <field name="mobileNo" dataType="String" length="20" canBeNull="true"
                   remark="手机号"/>
            <field name="email" dataType="String" length="30" canBeNull="true"
                   remark="邮箱"/>
        </packet>
        <packet class="packet.customapi.LoginRestRequestBody">
            <field name="loginName" dataType="String" length="12"
                   canBeNull="false" remark="登录名"/>
            <field name="loginpwd" dataType="String" length="64" canBeNull="false"
                   remark="密码"/>
        </packet>
        <packet class="packet.customapi.LoginRestResponseBody">
            <field name="uu_id" dataType="String" length="64" canBeNull="false"
                   remark="登录凭证"/>
            <field name="sex" dataType="String" length="1" canBeNull="true"
                   remark="性别"/>
            <field name="nickName" dataType="String" length="30" canBeNull="true"
                   remark="昵称"/>
            <field name="mobileNo" dataType="String" length="20" canBeNull="true"
                   remark="手机号"/>
            <field name="email" dataType="String" length="30" canBeNull="true"
                   remark="邮箱"/>
        </packet>
        <packet class="packet.customapi.AutoLoginRestRequestBody">
            <field name="uuidOld" dataType="String" length="64" canBeNull="false"
                   remark="旧登录凭证"/>
        </packet>
        <packet class="packet.customapi.ArticleListResponseBody">
            <list name="list" class="packet.customapi.Article">
                <field name="id" dataType="Long" length="64" canBeNull="false"
                       remark="文章Id"/>
                <field name="title" dataType="String" length="64" canBeNull="false"
                       remark="文章编号"/>
                <field name="detailUrl" dataType="String" length="128"
                       canBeNull="false" remark="文章详情地址"/>
            </list>
        </packet>
    </packets>
    <services>
        <service name="userServiceRestCustomApi" class="UserServiceRestCustomApi">
            <method name="register" version="" path="/register" remark="注册">
                <request class="packet.customapi.RegistserRestRequestBody"/>
            </method>
            <method name="login" version="" path="/login" remark="登录">
                <request class="packet.customapi.LoginRestRequestBody"/>
                <response class="packet.customapi.LoginRestResponseBody"/>
            </method>
            <method name="login" version="v1_1" path="/login" remark="登录v1.1">
                <request class="packet.customapi.LoginRestRequestBody"/>
                <response class="packet.customapi.LoginRestResponseBody"/>
            </method>
            <method name="autoLogin" version="" path="/autoLogin" remark="自动登录">
                <request class="packet.customapi.AutoLoginRestRequestBody"/>
                <response class="packet.customapi.LoginRestResponseBody"/>
            </method>
        </service>
        <service name="articleServiceRestCustomApi" class="ArticleServiceRestCustomApi">
            <method name="check" version="" path="/check" method="GET"
                    remark="是否有新文章检测"/>
            <method name="latests" version="" path="/latests" remark="最近版本列表">
                <response class="packet.customapi.ArticleListResponseBody"/>
            </method>
        </service>
    </services>
    <controllers>
        <controller type="CustomApi" name="UserCustomApiController" path="/customapi/user"
                    clientName="UserCustomApiClient" remark="用户管理接口" tags="第三方接口">
            <service name="userService" ref="userServiceRestCustomApi"/>
        </controller>
        <controller type="CustomApi" name="ArticleCustomApiController" path="/customapi/article"
                    clientName="ArticleCustomApiClient" remark="版本接口" tags="第三方接口">
            <service name="articleService" ref="articleServiceRestCustomApi"/>
        </controller>
    </controllers>
</bundle>